{{ define "shoppinglist/index.tmpl" }}
    <div>Shopping List</div>
    <table>
        <tr>
            <th>Name</th>
            <th>Quantity</th>
            <th>Unit</th>
            <th></th>
        </tr>
        {{ range .shoppingLists }}
            <tr>
                <td>{{ .Name }}</td>
                <td>{{ .Qty }}</td>
                <td>{{ .Unit }}</td>
                <td><a href="/shopping-list/show/{{.Id}}">Detail</a></td>
            </tr>
        {{ end }}
    </table>

    <br/>
    <div><a href="/shopping-list/new">New</a></div>

    {{ template "common/pagination.tmpl" .pagination }}
{{ end }}
